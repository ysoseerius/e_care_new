<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="queue"
        android:id="@+id/queue_number"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/atype_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="atype"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@+id/atype_number"
        android:layout_alignLeft="@+id/atype_number"
        android:layout_alignStart="@+id/atype_number" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date"
        android:layout_alignEnd="@+id/doctor_name" />

    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="doctor"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Queue:"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/queue_number" />

</RelativeLayout>